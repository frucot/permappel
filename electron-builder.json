{
  "appId": "com.permappel.app",
  "productName": "PERMAPPEL",
  "directories": {
    "output": "dist",
    "buildResources": "assets"
  },
  "files": [
    "main.js",
    "preload.js",
    "public/**/*",
    "server/**/*",
    "config.json",
    "init-database.js",
    "!server/node_modules",
    "!server/backups",
    "!server/uploads",
    "!server/permappel.db*",
    "!**/*.log",
    "!**/*.tmp"
  ],
  "extraResources": [
    {
      "from": "assets/icon.png",
      "to": "icon.png"
    }
  ],
  "win": {
    "target": [
      {
        "target": "portable",
        "arch": ["x64"]
      },
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "icon": "assets/icon.ico",
    "requestedExecutionLevel": "asInvoker",
    "artifactName": "PERMAPPEL-${version}-${arch}.${ext}"
  },
  "portable": {
    "artifactName": "PERMAPPEL-${version}-Portable.exe"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "PERMAPPEL",
    "installerIcon": "assets/icon.ico",
    "uninstallerIcon": "assets/icon.ico",
    "installerHeaderIcon": "assets/icon.ico",
    "deleteAppDataOnUninstall": false,
    "runAfterFinish": true
  },
  "publish": null
}
